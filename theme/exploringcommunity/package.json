{
  "name": "exploringcommunity",
  "version": "0.1.0",
  "private": true,
  "description": "A clean, accessible Ghost theme for ExploringCommunity",
  "author": "ExploringCommunity",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "test": "gscan .",
    "zip": "npm run clean-zip && zip -r ../exploringcommunity.zip . -x 'node_modules/*' -x '.git/*' -x 'package-lock.json'",
    "clean-zip": "rm -f ../exploringcommunity.zip || powershell -Command \"if(Test-Path ..\\exploringcommunity.zip){Remove-Item ..\\exploringcommunity.zip}\"",
    "postinstall": "echo 'Install theme deps (if any). No build step required.'"
  },
  "devDependencies": {
    "gscan": "^5.4.3"
  }
}

